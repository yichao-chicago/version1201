<!-- Simple full-width example-->

<div class="page-header">
  <h1>Item #<%= @item.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>List</dt>
      <dd><%= @item.list_id %></dd>

      <dt>Rating</dt>
      <dd><%= @item.rating %></dd>

      <dt>Store link</dt>
      <dd><%= @item.store_link %></dd>

      <dt>Description</dt>
      <dd><%= @item.description %></dd>

      <dt>Pic</dt>
      <dd><%= @item.pic %></dd>

      <dt>Status</dt>
      <dd><%= @item.status %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/items" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_item/<%= @item.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </dd>
    </dl>

  </div>
</div>  <!-- End of row-->
