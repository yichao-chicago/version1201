<!-- Validation failure messages -->

<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add Item</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_item" class="form-horizontal">

    <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="title" name="title" placeholder="For example: Kindle Paperwhite" class="form-control" value="<%= @item.title %>">
        </div>
      </div>

      <!-- Label and input for list_id -->
      <div class="form-group">
        <label for="list_id" class="col-sm-2 control-label">
          List
        </label>
        <div class="col-sm-10">
          <input type="text" id="list_id" name="list_id" placeholder="List" class="form-control"  <% if params[:list_id].present? %>
              value="<%= params[:list_id] %>"
            <% else %>
              value="<%= @item.list_id %>"
            <% end %>
          >
        </div>
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="star_rating" class="col-sm-2 control-label">Hou Much I Want</label>
        <div>
          <span class="star-rating col-sm-10">
            <input type="radio" name="rating" value="1"><i></i>
            <input type="radio" name="rating" value="2"><i></i>
            <input type="radio" name="rating" value="3"><i></i>
            <input type="radio" name="rating" value="4"><i></i>
            <input type="radio" name="rating" value="5"><i></i>
          </span>
        </div>
      </div>

      <!-- Label and input for store_link -->
      <div class="form-group">
        <label for="store_link" class="col-sm-2 control-label">
          Store link
        </label>
        <div class="col-sm-10">
          <input type="text" id="store_link" name="store_link" placeholder="Store link, for example: www.amazon.com/gp/product/B00IOY8XWQ" class="form-control" value="<%= @item.store_link %>">
        </div>
      </div>

      <!-- Label and input for pic -->
      <div class="form-group">
        <label for="pic" class="col-sm-2 control-label">
          Pic_url
        </label>
        <div class="col-sm-10">
          <input type="text" id="pic" name="pic" placeholder="url for the picture" class="form-control" value="<%= @item.pic %>">
        </div>
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">
          Description
        </label>
        <div class="col-sm-10">
          <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @item.description %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Item" class="btn btn-success">
          or
          <a href="/items">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->
<style>
  .star-rating {
    font-size: 0;
    white-space: nowrap;
    display: inline-block;
    width: 150px;
    height: 30px;
    overflow: hidden;
    position: relative;
    background: url('data:image/svg+xml;base64,');
    background-size: contain;
  }
  .star-rating i {
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 20%;
    z-index: 1;
    background: url('data:image/svg+xml;base64,');
    background-size: contain;
  }
  .star-rating input {
    -moz-appearance: none;
    -webkit-appearance: none;
    opacity: 0;
    display: inline-block;
    width: 20%;
    height: 100%;
    margin: 0;
    padding: 0;
    z-index: 2;
    position: relative;
  }
  .star-rating input:hover + i,
  .star-rating input:checked + i {
    opacity: 1;
  }
  .star-rating i ~ i {
    width: 40%;
  }
  .star-rating i ~ i ~ i {
    width: 60%;
  }
  .star-rating i ~ i ~ i ~ i {
    width: 80%;
  }
  .star-rating i ~ i ~ i ~ i ~ i {
    width: 100%;
  }
  ::after,
  ::before {
    height: 100%;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    text-align: center;
    vertical-align: middle;
  }
</style>
